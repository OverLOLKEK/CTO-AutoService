<Window x:Class="AutoService.ViewPage.Directory.EditClientsDir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoService.ViewPage.Directory"
        mc:Ignorable="d"
        Title="EditClientsDir" Height="230" Width="600">
    <Grid>
        <GroupBox Grid.Column="0" >
            <StackPanel>
                <TextBlock Text="Фамилия"/>
                <TextBox Text="{Binding Surname}" DataContext="{Binding ClientsDir}"/>
                <TextBlock Text="Имя"/>
                <TextBox Text="{Binding Name}" DataContext="{Binding ClientsDir}"/>
                <TextBlock Text="Отчество"/>
                <TextBox Text="{Binding Patronymi}" DataContext="{Binding ClientsDir}"/>
                <TextBlock Text="Номер телефона"/>
                <TextBox Text="{Binding TeleNumb}" DataContext="{Binding ClientsDir}"/>

                <Button Content="Сохранить" Width="160" HorizontalAlignment="Right" Margin="0,10" Command="{Binding SaveClientsDir}"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
